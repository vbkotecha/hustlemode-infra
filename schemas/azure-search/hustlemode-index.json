{
  "name": "hustlemode-index",
  "description": "Primary search index for HustleMode.ai application",
  "lastUpdated": "2024-03-19",
  "version": "1.0.0",
  "fields": [
    {
      "name": "id",
      "type": "Edm.String",
      "key": true,
      "searchable": false,
      "description": "Unique identifier for each document"
    },
    {
      "name": "content",
      "type": "Edm.String",
      "searchable": true,
      "filterable": false,
      "sortable": false,
      "facetable": false,
      "analyzer": "en.microsoft",
      "description": "Main content field for searchable text"
    },
    {
      "name": "category",
      "type": "Edm.String",
      "searchable": true,
      "filterable": true,
      "sortable": true,
      "facetable": true,
      "description": "Category of the content (e.g., goals, check-ins, motivation)"
    },
    {
      "name": "timestamp",
      "type": "Edm.DateTimeOffset",
      "searchable": false,
      "filterable": true,
      "sortable": true,
      "facetable": false,
      "description": "When the document was created or last updated"
    },
    {
      "name": "user_id",
      "type": "Edm.String",
      "searchable": false,
      "filterable": true,
      "sortable": false,
      "facetable": false,
      "description": "ID of the user who owns this document"
    }
  ],
  "suggesters": [
    {
      "name": "content-suggester",
      "searchMode": "analyzingInfixMatching",
      "sourceFields": ["content"]
    }
  ],
  "scoringProfiles": [
    {
      "name": "recent-content",
      "text": {
        "weights": {
          "timestamp": 2
        }
      }
    }
  ],
  "defaultScoringProfile": "recent-content"
} 