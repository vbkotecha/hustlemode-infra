{
  "name": "users",
  "description": "User data container schema for HustleMode.ai",
  "version": "1.0.0",
  "lastUpdated": "2024-03-19",
  "partitionKey": "/id",
  "uniqueKeys": [
    {
      "paths": ["/phoneNumber"]
    },
    {
      "paths": ["/email"]
    }
  ],
  "indexingPolicy": {
    "indexingMode": "consistent",
    "automatic": true,
    "includedPaths": [
      {
        "path": "/id/?"
      },
      {
        "path": "/phoneNumber/?"
      },
      {
        "path": "/email/?"
      },
      {
        "path": "/name/?"
      },
      {
        "path": "/createdAt/?"
      }
    ],
    "excludedPaths": [
      {
        "path": "/*"
      }
    ]
  },
  "schema": {
    "type": "object",
    "required": ["id", "phoneNumber", "createdAt"],
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique user identifier"
      },
      "phoneNumber": {
        "type": "string",
        "description": "User's phone number (unique)"
      },
      "email": {
        "type": "string",
        "format": "email",
        "description": "User's email address (optional, unique if provided)"
      },
      "name": {
        "type": "string",
        "description": "User's full name"
      },
      "preferences": {
        "type": "object",
        "properties": {
          "timezone": {
            "type": "string",
            "description": "User's timezone"
          },
          "notificationSettings": {
            "type": "object",
            "properties": {
              "dailyReminders": {
                "type": "boolean",
                "default": true
              },
              "weeklyReports": {
                "type": "boolean",
                "default": true
              }
            }
          }
        }
      },
      "createdAt": {
        "type": "string",
        "format": "date-time",
        "description": "When the user was created"
      },
      "lastActive": {
        "type": "string",
        "format": "date-time",
        "description": "When the user was last active"
      },
      "status": {
        "type": "string",
        "enum": ["active", "inactive", "blocked"],
        "default": "active"
      }
    }
  }
} 